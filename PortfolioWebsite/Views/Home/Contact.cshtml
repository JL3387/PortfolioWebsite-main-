		<section class="module module-parallax bg-dark-90" data-background="assets/images/section-13.jpg">

			<!-- HERO TEXT -->
			<div class="container">

				<div class="row">
					<div class="col-sm-12 text-center">
						<h1 class="mh-line-size-3 font-alt m-b-20">Contact Me</h1>
						<h5 class="mh-line-size-4 font-alt">I will get back to you as soon as possible.</h5>
					</div>
				</div>

			</div>
			<!-- /HERO TEXT -->

		</section>
		<!-- /HERO -->

		<!-- CONTACT -->
		<section class="module">

			<div class="container">

				<div class="row">
					<div class="col-sm-6 col-sm-offset-3">
						<h2 class="module-title font-alt">Get In Touch</h2>
					</div>
				</div>

				<div class="row">

                    <div class="col-sm-6 col-sm-offset-1">

                        @using (Html.BeginForm())
    {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    <div class="form-group">

                        @Html.TextBoxFor(m => m.FromName, new { @class = "form-control", id = "cname", placeholder = "Name..." })

                        @Html.ValidationMessageFor(m => m.FromName)
                    </div>

                    <div class="form-group">

                        @Html.TextBoxFor(m => m.FromEmail, new { @class = "form-control", id = "cname", placeholder = "Email..." })

                        @Html.ValidationMessageFor(m => m.FromEmail)
                    </div>

                    <div class="form-group">

                        @Html.TextBoxFor(m => m.Subject, new { @class = "form-control", id = "cname", placeholder = "Subject..." })

                        @Html.ValidationMessageFor(m => m.Subject)
                    </div>


                    <div class="form-group">

                        @Html.TextAreaFor(m => m.Body, new { @class = "form-control", id = "cname", placeholder = "Message..." })

                        @Html.ValidationMessageFor(m => m.Body)
                    </div>

                    <div class="text-center">
                        <input type="submit" class="btn btn-block btn-round btn-d" value="Send" />
                    </div>
}

                        <!-- Ajax response -->
                        <div id="contact-response" class="ajax-response font-alt"></div>

                    </div>

					<div class="col-sm-4">

						<!-- ALT CONTENT BOX -->
						<!-- /ALT CONTENT BOX -->

						<!-- ALT CONTENT BOX -->
						<div class="alt-content-box">
							<div class="alt-content-box-icon">
								<i class="ion-map"></i>
							</div>
							<h5 class="alt-content-box-title font-alt">
								Where to meet
							</h5>
							Winston Salem, NC<br><br>
							@*<a href="#module-maps" class="section-scroll">Find me →</a>*@
						</div>
						<!-- /ALT CONTENT BOX -->

					</div>

				</div>

			</div>
		</section>
		<!-- /CONTACT -->

